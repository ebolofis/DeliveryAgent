<div id="loyaltyOptions" class="custom-modal" data-backdrop="static" data-keyboard="false">
    <div class="custom-modal-medium-extra-large custom-flex-column">
        <div class="custom-flex-10 custom-flex-center custom-modal-header">
            <div class="custom-text-black custom-text-bold custom-text-extra-large" data-bind="text: language.Translate('LoyaltyCaps', null)"></div>
        </div>
        <div class="custom-flex-78 loyalty-options-body" data-bind="with: $root.loyaltyOptions">
            <div class="custom-full-width custom-flex-column loyalty-options-container">
                <div class="custom-flex-10 custom-flex-row">
                    <div class="custom-flex-40 custom-flex-start custom-text-black custom-text-bold" data-bind="text: language.Translate('AvailablePointsColon', null)"></div>
                    <div class="custom-flex-10 custom-flex-center custom-text-black custom-text-extra-large" data-bind="text: AvailablePoints"></div>
                    <div class="custom-flex-40 custom-flex-start custom-text-black custom-text-bold" data-bind="text: language.Translate('ConsumePointsColon', null)"></div>
                    <div class="custom-flex-10 custom-flex-center custom-text-black custom-text-extra-large" data-bind="text: SpentPoints()"></div>
                </div>
                <div class="loyalty-divider"></div>
                <div class="custom-flex-10 custom-flex-center custom-text-black custom-text-bold" data-bind="text: language.Translate('AmountDiscount', null)"></div>
                <div class="custom-flex-10 custom-flex-row" data-bind="with: RedeemDiscount">
                    <div class="custom-flex-35 custom-flex-start custom-text-black" data-bind="text: language.Translate('MaximumDiscountAmountColon', null)"></div>
                    <div class="custom-flex-10 custom-flex-end custom-text-black" data-bind="text: MaxDiscountAmount.toFixed(2)"></div>
                    <div class="custom-flex-5 custom-flex-center custom-text-black"><i class="fa fa-euro-sign custom-fa-faint"></i></div>
                    <div class="custom-flex-30 custom-flex-start custom-text-black" data-bind="text: language.Translate('PointCostColon', null)"></div>
                    <div class="custom-flex-10 custom-flex-center custom-text-black" data-bind="text: Points"></div>
                    <div class="custom-flex-10 custom-flex-center">
                        <button class="custom-default-button custom-default-button-simple custom-flex-center custom-text-black custom-text-bold loyalty-amount-discount-button" data-bind="click: $root.CheckLoyaltyOption.bind($data, $data), clickBubble: false, css: { 'custom-default-button-success' : IsChecked() }" tabindex="-1"><i class="fa fa-gem custom-fa-faint"></i></button>
                    </div>
                </div>
                <div class="loyalty-divider"></div>
                <div class="custom-flex-10 custom-flex-center custom-text-black custom-text-bold" data-bind="text: language.Translate('ProductDiscount', null)"></div>
                <div class="custom-flex-50 custom-flex-column" id="scrollbar-style" data-bind="foreach: RedeemProduct">
                    <div>
                        <!-- ko if: ProductId != null -->
                        <div class="custom-flex-row loyalty-item">
                            <div class="custom-flex-7 custom-flex-end custom-text-black custom-text-bold" data-bind="text: Quantity"></div>
                            <div class="custom-flex-5 custom-flex-center custom-text-black custom-text-bold">x</div>
                            <div class="custom-flex-68 custom-flex-start custom-text-black custom-text-bold" data-bind="text: Product"></div>
                            <div class="custom-flex-10 custom-flex-center custom-text-black" data-bind="text: Points"></div>
                            <div class="custom-flex-10 custom-flex-center">
                                <button class="custom-default-button custom-default-button-simple custom-flex-center custom-text-black custom-text-bold loyalty-free-product-button" data-bind="click: $root.CheckLoyaltyOption.bind($data, $data), clickBubble: false, css: { 'custom-default-button-success' : IsChecked() }" tabindex="-1"><i class="fa fa-gem custom-fa-faint"></i></button>
                            </div>
                        </div>
                        <!-- /ko -->
                        <!-- ko if: ProductCategoryId != null -->
                        <div class="custom-flex-row loyalty-item">
                            <div class="custom-flex-7 custom-flex-end custom-text-black custom-text-bold" data-bind="text: Quantity"></div>
                            <div class="custom-flex-5 custom-flex-center custom-text-black custom-text-bold">x</div>
                            <div class="custom-flex-68 custom-flex-start custom-text-black custom-text-bold" data-bind="text: ProductCategory"></div>
                            <div class="custom-flex-10 custom-flex-center custom-text-black" data-bind="text: Points"></div>
                            <div class="custom-flex-10 custom-flex-center">
                                <button class="custom-default-button custom-default-button-simple custom-flex-center custom-text-black custom-text-bold loyalty-free-product-button" data-bind="click: $root.CheckLoyaltyOption.bind($data, $data), clickBubble: false, css: { 'custom-default-button-success' : IsChecked() }" tabindex="-1"><i class="fa fa-gem custom-fa-faint"></i></button>
                            </div>
                        </div>
                        <!-- /ko -->
                    </div>
                </div>
            </div>
        </div>
        <div class="custom-flex-12 custom-modal-footer">
            <div class="custom-full-width custom-flex-row">
                <div class="custom-flex-50 custom-flex-center">
                    <button class="custom-default-button custom-default-button-success custom-flex-center custom-text-black custom-text-bold custom-modal-footer-button-two" data-bind="text: language.Translate('ConfirmCaps', null), click: $root.ShowLoyaltyOptionsConfirm, clickBubble: false" tabindex="-1"></button>
                </div>
                <div class="custom-flex-50 custom-flex-center">
                    <button class="custom-default-button custom-default-button-simple custom-flex-center custom-text-black custom-text-bold custom-modal-footer-button-two" data-bind="text: language.Translate('ReturnCaps', null), click: $root.ShowLoyaltyOptionsCancel, clickBubble: false" tabindex="-1"></button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="loyaltyProductOptions" class="custom-modal" data-backdrop="static" data-keyboard="false">
    <div class="custom-modal-medium-extra-large custom-flex-column">
        <div class="custom-flex-12 custom-flex-center custom-modal-header">
            <div class="custom-text-black custom-text-bold custom-text-extra-large" data-bind="text: language.Translate('ProductsPerCategoryCaps', null)"></div>
        </div>
        <div class="custom-flex-76 custom-flex-column loyalty-product-options-body" data-bind="with: $root.loyaltyOptions">
            <div class="custom-flex-100 custom-flex-column" id="scrollbar-style" data-bind="foreach: ProductOptions">
                <div>
                    <div class="custom-flex-row loyalty-product-options-option-header">
                        <div class="custom-flex-18 custom-flex-start custom-text-black custom-text-bold" data-bind="text: language.Translate('CategoryColon', null)"></div>
                        <div class="custom-flex-30 custom-flex-end custom-text-black" data-bind="text: ProductCategory"></div>
                        <div class="custom-flex-2"></div>
                        <div class="custom-flex-35 custom-flex-start custom-text-black custom-text-bold" data-bind="text: language.Translate('DiscountQuantityColon', null)"></div>
                        <div class="custom-flex-9 custom-flex-end custom-text-black custom-text-extra-large" data-bind="text: Quantity"></div>
                        <div class="custom-flex-2"></div>
                        <div class="custom-flex-35 custom-flex-start custom-text-black custom-text-bold" data-bind="text: language.Translate('CurrentQuantityColon', null)"></div>
                        <div class="custom-flex-9 custom-flex-end custom-text-black custom-text-extra-large" data-bind="text: InsertedQuantity()"></div>
                    </div>
                    <div class="custom-flex-wrap" data-bind="foreach: ProductList">
                        <div class="custom-flex-center loyalty-product-options-product-button-container">
                            <button class="custom-default-button custom-default-button-simple custom-flex-center custom-text-black custom-text-bold custom-text-small loyalty-product-options-product-button" data-bind="text: Description, click: $root.ToggleLoyaltyProduct.bind($data, $data, true), clickBubble: false" tabindex="-1"></button>
                        </div>
                    </div>
                    <div class="custom-flex-column loyalty-product-options-inserted-products-container" data-bind="foreach: InsertedProductList">
                        <div class="custom-flex-row loyalty-product-options-inserted-product">
                            <div class="custom-flex-2"></div>
                            <div class="custom-flex-88 custom-flex-start custom-text-black custom-text-small" data-bind="text: Description"></div>
                            <div class="custom-flex-10 custom-flex-center">
                                <button class="custom-default-button custom-default-button-error custom-flex-center custom-text-white custom-text-bold custom-text-small loyalty-product-options-inserted-product-button" data-bind="click: $root.ToggleLoyaltyProduct.bind($data, $data, false), clickBubble: false" tabindex="-1"><i class="fa fa-times custom-fa-faint"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="custom-flex-12 custom-modal-footer">
            <div class="custom-full-width custom-flex-center">
                <button class="custom-default-button custom-default-button-simple custom-flex-center custom-text-black custom-text-bold custom-modal-footer-button-one" data-bind="text: language.Translate('OkCaps', null), click: $root.CloseLoyaltyProductOptions, clickBubble: false" tabindex="-1"></button>
            </div>
        </div>
    </div>
</div>